  <form action="/students/courses">
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入老師姓名或課程名稱" aria-label="Teacher name or lesson name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major border" type="submit" id="search-button">搜尋</button>
            </div>
            </div>
             </form>
<div class="row mt-3">
  {{#each courses}}
    <div class="col-4" style="margin:0px;">
          <div class="card mb-3" style="margin:0px;height:200px">
            <div class="d-flex mt-3 mx-2">
              <img class="card-img-top rounded-circle" src="{{this.User.avatar}}"
                style="background-color:gray; width:70px;height:70px">
              <div class="d-flex flex-column mt-3 mx-3" style="text-align:start">
                <a href="/students/courses/{{this.id}}" style="text-decoration:none;color:black">
                  <h5 class="card-title mb-1">{{this.User.name}}</h5>
                </a>
                <p>{{this.User.nation}}</p>
              </div>
            </div>
            <div class="card-body" style="height:30%;text-align:start">
              <h6 style="font-size:1.1rem;">{{this.name}}</h6>
            </div>
          </div>
        </div>
        {{/each}}
        </div> 

         <div class="col-3">
      <div class="border border-success border-2 rounded" style="height:100%;margin-left:10px;border-width:10px">
        <p style="margin-top:10px;font-size:20px;font-color:rgb(46, 40, 40)">
          學習時數排行榜
        </p>
        <div class="mt-3 d-flex flex-column align-items-center">
          {{#each users}}
          <div class="d-flex mb-4">
            <img src="{{users.avatar}}" alt="" style="margin-right:5px;width:30px;height:30px; border-radius:50%; background-color:gray">
            <h5 style="margin:0px">NO.1  {{this.name}}</h5>
          </div>
          {{/each}}
        </div>   
      </div>
    </div>

         <div class="row col-9">
    <nav class=" d-flex justify-content-center" aria-label="page navigation">
      <ul class="pagination">
        <li class="page-item {{#if (eq pagination.currentPage 1)}}disabled{{/if}}">
          <a class="page-link" href="/students/courses?page={{pagination.prev}}&keyword={{keyword}}" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
        {{#each pagination.pages}}
        {{#if (eq this ../pagination.currentPage)}}
        <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
        {{else}}
        <li class="page-item">
          <a class="page-link" href="/students/courses?page={{this}}&keyword={{../keyword}}">{{this}}</a>
        </li>
        {{/if}}
        {{/each}}
        <li class="page-item {{#if (eq pagination.currentPage pagination.totalPage)}}disabled{{/if}}">
          <a class="page-link" href="/students/courses?page={{pagination.next}}&keyword={{keyword}}" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      </ul>
    </nav>
  </div>
</div>
<header>
  <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">English Tutor Platform</a>
      <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link active" href="/">Home
              <span class="visually-hidden">(current)</span>
            </a>
          </li>
          {{#if user}}
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
            aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          {{#if (eq user.role 'student')}}
          <a href="/students/{{user.id}}">
            <span class="text-white nav-link">{{ user.name }}</span>
          </a>
          <li>
            <a href="/students/{{user.id}}/apply">
              <span class="text-white nav-link">成為老師</span>
            </a>
          </li>
          {{/if}}
          {{#if (eq user.role 'tutor')}}
          <li>
            <a href="/tutors/{{user.id}}">
              <span class="text-white nav-link">{{ user.name }}</span>
            </a>
          </li>
          {{/if}}
        </ul>
      </div>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav ms-auto mb-2 mb-md-0">
          <li class="nav-item d-inline-flex align-items-center">
            <span class="text-white nav-link">Hi, {{ user.email }}</span>
          </li>
          <li class="nav-item">
            <a href="/signout"><button type="button" class="btn btn-outline-light btn-primary">Sign Out</button></a>
          </li>
          {{else}}
        </ul>
        <ul class="navbar-nav ms-auto mb-2 mb-md-0">
          <li class="nav-item d-inline-flex align-items-center">
            <a href="/signup"><button type="button" class="btn btn-outline-light btn-primary">Sign up</button></a>
          </li>
          <li>&nbsp;</li> <!-- 添加空隙 -->
          <li class="nav-item">
            <a href="/signin"><button type="button" class="btn btn-outline-light btn-primary">Sign In</button></a>
          </li>
        </ul>
      </div>
      {{/if}}
    </div>
  </nav>
</header>
